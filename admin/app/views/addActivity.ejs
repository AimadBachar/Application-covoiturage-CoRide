<%- include("partials/header")  %> 
     
<h2>Ajouter une activité</h2>

<form method="POST" action="">
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Nom de l'activité</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputEmail3" placeholder="Nom de l'activité" name="label">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Couleur du tag</label>
      <div class="col-sm-10">
        <input type="color" class="form-control" id="inputPassword3" placeholder="Couleur du tag" name="color">
      </div>
    </div>
    
    
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Ajouter l'activité</button>
      </div>
    </div>
  </form>
     
